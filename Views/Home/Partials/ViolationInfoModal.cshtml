
<!-- Modal -->
<div class="modal fade" id="violationInfoModal" tabindex="-1" role="dialog" aria-labelledby="studentViolationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
